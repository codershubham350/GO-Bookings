{{template "base" .}}

{{define "content"}}
 <div class="container">

        <div class="row">
            <div class="col">
             <h1>Make Reservation</h1>
                <h4 style="margin-top:2rem">Reservation Deatails</h4>
                <form method="post" action="" class="needs-validation" novalidate>

                    <div class="form-group mt-5 mb-3">
                        <label for="first_name">First Name:</label>
                        <input type="text" class= "form-control" required autocomplete="off" placeholder="First Name" name="first_name" id="first_name"/>
                    </div>

                    <div class="form-group mb-3">
                        <label for="last_name">Last Name:</label>
                        <input type="text" required class= "form-control" autocomplete="off" placeholder="Last Name" name="last_name" id="last_name"/>
                     </div>

                    <div class="form-group mb-3">
                        <label for="email">Email:</label>
                        <input type="email" required class= "form-control" autocomplete="off" placeholder="Email" name="email" id="email"/>
                    </div>

                    <div class="form-group mb-3">
                        <label for="phone">Phone Number:</label>
                        <input type="text" required class= "form-control" autocomplete="off" placeholder="Phone Number" name="phone" id="phone"/>
                    </div>

                    <hr>

                    <input type="submit" class="btn btn-primary" value="Make Reservation"/>


                </form>
            </div>
        </div>


    </div>

{{end}}